%html
  %head
    %title
      TorqueBox: #{page.title}
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'/stylesheets/blueprint/screen.css', :media=>'screen, projection' }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'/stylesheets/blueprint/print.css', :media=>'print' }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'/stylesheets/site.css' }
  %body
    .container
      #header.span-24.last
        .spacer-box
          #logos
            %a{:href=>'/'}
              %img#torquebox-logo{ :src=>'/images/torquebox-logo.png' }
            %a{:href=>'http://jboss.org/'}
              %img#jbosscommunity-logo{ :src=>'/images/jbosscommunity-logo.png' }
          %ul#top-nav
            %li
              %a{ :href=>'/' } Home
            %li
              %a{ :href=>'/features' } Features
            %li
              %a{ :href=>'/news' } News
            %li
              %a{ :href=>'/license' } License
            %li
              %a{ :href=>'/download' } Download
            %li
              %a{ :href=>'/documentation' } Documentation
            %li
              %a{ :href=>'/community' } Community
            %li
              %a{ :href=>'/source_repository' } Source Repository
      #body.span-24.last
        #content
          - unless page.inhibit_title 
            %h1.page-title
              - if page.section 
                %a{:href=>"/#{page.section.downcase}.html"} #{page.section}
                \:
              #{page.title}
          ~ content
      #footer.span-24.last 
        A member of the <a href="http://jboss.org/">JBoss Community</a>.
