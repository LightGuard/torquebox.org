!!! XML

%feed{ 'xml:base'=>'http://torquebox.org/', 'xml:lang'=>'en-US', :xmlns=>'http://www.w3.org/2005/Atom' }
  %id http://torquebox.org/
  %title The TorqueBox Project
  %updated= site.news_posts.first.date.xmlschema
  %link{:rel=>"alternate", :type=>"text/html",            :href=>"http://torquebox.org"}
  %link{:rel=>"self",      :type=>"application/atom+xml", :href=>"http://torquebox.org/news.atom"}
  - for post in site.news_posts
    %entry
      %id http://torquebox.org#{post.url}
      %title= escape_once( post.title )
      %updated= post.date.xmlschema
      %link{:rel=>"alternate", :type=>"text/html", :href=>"http://torquebox.org#{post.url}" }
      %author
        %name= post.author
      %summary
        = html_to_text( post.content )
      %content{:type=>'html'}
        = escape_once( fully_qualify_urls( site.server.url, post.content )  )

